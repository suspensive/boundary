{
  "name": "suspensive",
  "private": true,
  "keywords": [
    "suspensive",
    "react",
    "react-query"
  ],
  "homepage": "https://docs.suspensive.org",
  "bugs": "https://github.com/suspensive/react/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/suspensive/react.git"
  },
  "license": "MIT",
  "workspaces": [
    "configs/*",
    "packages/*",
    "websites/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "commit": "cz",
    "dev": "turbo run dev --parallel",
    "turbo:install": "turbo run install",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "postinstall": "husky install",
    "lint": "turbo run lint",
    "npm:publish": "turbo run npm:publish && yarn post:publish",
    "type:check": "turbo run type:check --parallel",
    "changeset": "changeset && changeset version"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@commitlint/cli": "^17.4.0",
    "@commitlint/config-conventional": "^17.4.0",
    "all-contributors-cli": "^6.24.0",
    "commitizen": "^4.2.6",
    "cz-conventional-changelog": "^3.3.0",
    "eslint-config-custom": "*",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.2",
    "turbo": "1.6.3",
    "typescript": "^4.9.4"
  },
  "packageManager": "yarn@3.3.1"
}
